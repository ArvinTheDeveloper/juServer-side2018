
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Calculator [Post Method]</h2>

@using (Html.BeginForm("Calculate", "Calculator"))
{
    <div class="form-group">
        <label>First Arbitrary: </label>
        <input type="text" class="form-control" name="firstNumber" value="" />
    </div>
    <div class="form-group">
        <label>Second Arbitrary: </label>
        <input type="text" class="form-control" name="secondNumber" value="" />
    </div>
    <div class="form-group">
        <div class="radio-inline">
            <label class="btn btn-default">+ <input type="checkbox" name="arithmetic" value="plus" /></label>
        </div>
        <div class="radio-inline">
            <label class="btn btn-default">- <input type="checkbox" name="arithmetic" value="minus" /></label>
        </div>
        <div class="radio-inline">
            <label class="btn btn-default">* <input type="checkbox" name="arithmetic" value="multiply" /></label>
        </div>
        <div class="radio-inline">
            <label class="btn btn-default">* <input type="checkbox" name="arithmetic" value="divide" /></label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">CALCULATE!</button>
}
<h1>Result: @ViewBag.Result</h1>

